{
  "name": "mostarnakt-main",
  "version": "1.0.0",
  "description": "Web presentation of Moštárna Klatovy",
  "main": "index.html",
  "scripts": {
    "html-build": "posthtml -c posthtml.json && posthtml -c posthtml-comp.json",
    "html-build-dev": "posthtml -c posthtml-dev.json && posthtml -c posthtml-comp-dev.json",
    "html-watch": "onchange src/html -- npm run html-build",
    "html-watch-dev": "onchange src/html -- npm run html-build-dev",
    "img-build": "imagemin src/img/* --out-dir=_dist/img",
    "img-watch": "onchange src/img -- npm run img-build",
    "jscr-build": "babel src/jscr --out-dir _dist/jscr",
    "jscr-watch": "onchange src/jscr -- npm run jscr-build",
    "css-build": "node-sass src/sass/main.scss _tmp/css/main.css",
    "css-build-watch": "onchange src/sass -- npm run css-build",
    "css-ap": "postcss --use autoprefixer --output _tmp/css-ap/main.css _tmp/css/main.css",
    "css-ap-watch": "onchange _tmp/css -- npm run css-ap",
    "css-nano": "make-dir _dist/css && cssnano _tmp/css-ap/main.css _dist/css/main.css --safe",
    "css-nano-watch": "onchange _tmp/css-ap -- npm run css-nano",
    "css-copy": "copyfiles -f _tmp/css-ap/* _dist/css",
    "css-copy-watch": "onchange _tmp/css-ap -- npm run css-copy",
    "css-all": "npm-run-all css-build css-ap css-nano",
    "css-all-dev": "npm-run-all css-build css-ap css-copy",
    "seo-build": "copyfiles -f src/seo/* _dist",
    "seo-watch": "onchange src/seo -- npm run seo-build",
    "stat-build": "copyfiles -f src/stat/* _dist",
    "stat-watch": "onchange src/stat -- npm run stat-build",
    "att-build": "copyfiles -f src/att/* _dist/att",
    "att-watch": "onchange src/stat -- npm run att-build",
    "build": "run-p html-build img-build jscr-build css-all seo-build stat-build att-build",
    "build-dev": "run-p html-build-dev img-build jscr-build css-all-dev seo-build stat-build att-build",
    "serve": "http-server _dist -c-1",
    "start": "npm run build && run-p serve html-watch img-watch jscr-watch css-build-watch css-ap-watch css-nano-watch seo-watch stat-watch att-watch",
    "start-dev": "npm run build-dev && run-p serve html-watch-dev img-watch jscr-watch css-build-watch css-ap-watch css-copy-watch seo-watch stat-watch att-watch"
  },
  "keywords": [
    "Moštárna",
    "Klatovy",
    "klatovská",
    "moštárna",
    "moštování"
  ],
  "author": "Jiří Ulrich <jjulrichovi@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.3.5",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-ie": "^6.7.0",
    "bulma": "^0.9.3",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.8",
    "cssnano-cli": "^1.0.5",
    "ftp-deploy": "^2.4.1",
    "htmlnano": "^1.1.1",
    "http-server": "^13.0.2",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "make-dir": "^3.1.0",
    "make-dir-cli": "^3.0.0",
    "node-sass": "^6.0.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.3.7",
    "postcss-cli": "^8.3.1",
    "posthtml": "^0.16.5",
    "posthtml-cli": "^0.10.0",
    "posthtml-modules": "^0.7.4"
  }
}
